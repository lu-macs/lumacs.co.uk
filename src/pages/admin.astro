---
import { ExcludeAnalytics } from '@/components/ExcludeAnalytics';
import Layout from '@/components/Layout.astro';
---

<Layout title="Admin" description="Admin page for the website" noindex>
  <h1 class="text-2xl font-bold text-center">Admin</h1>
  <a
    href={`https://github.com/lu-macs/lumacs.co.uk/commit/${
      import.meta.env.CF_PAGES_COMMIT_SHA
    }`}
    class="underline hover:text-muted-foreground"
    target="_blank"
  >
    {
      import.meta.env.CF_PAGES_COMMIT_SHA
        ? 'Github commit'
        : 'Error: Github commit not available'
    }
  </a>
  <ExcludeAnalytics client:only="react" />
</Layout>
