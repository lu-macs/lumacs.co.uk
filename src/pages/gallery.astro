---
import Layout from '@/components/Layout.astro';
import { MyGallery } from '@/components/MyGallery';
import { getImages } from '@/server/db/queries';

export const prerender = false;

const images = await getImages();
---

<Layout title="Gallery" description="Gallery of Lancaster University Magic and Circus Society (LUMACS) performances, acts, evetns and more">
  <h1 class="text-2xl font-bold text-center">Gallery</h1>
  <p class="text-center mb-2">Here you can see some of what we have done.</p>
  <MyGallery images={images} />
</Layout>
